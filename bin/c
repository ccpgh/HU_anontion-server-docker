#!/bin/bash 

# settings
export BUILD_DIR=build
export TAG_ORG=anontion

export TAG_ID_SERVER=HU_anontion-server
export TAG_PREFIX_SERVER=`echo "${TAG_ORG}/${TAG_ID_SERVER}" | tr '[:upper:]' '[:lower:]' `
export TAG_SERVER="${TAG_PREFIX_SERVER}:latest"

export TAG_ID_ASTERISK=HU_anontion-asterisk
export TAG_PREFIX_ASTERISK=`echo "${TAG_ORG}/${TAG_ID_ASTERISK}" | tr '[:upper:]' '[:lower:]' `
export TAG_ASTERISK="${TAG_PREFIX_ASTERISK}:latest"

export ANONTION_DOCKER_GIT_USER=ccpgh

export SQL_ROOT_PWD=
export SQL_ANONTION_PWD=

# password
if [[ "$1" == "" ]]
then
  SQL_ROOT_PWD=password
else
  SQL_ROOT_PWD="${1}"
fi

if [[ "$2" == "" ]]
then
  SQL_ANONTION_PWD=password
else
  SQL_ANONTION_PWD="${2}"
fi

# cleanup
for i in ` (docker ps 2>&1) | grep -v 'CONTAINER ID' | egrep "${TAG_PREFIX_SERVER}|${TAG_PREFIX_ASTERISK}" | cut -d' ' -f1`
do
  \echo "stop container $i"
  docker stop "$i" 2>/dev/null
  \sleep 5
done

for i in ` (docker ps --all 2>&1) | grep -v 'CONTAINER ID' | egrep "${TAG_PREFIX_SERVER}|${TAG_PREFIX_ASTERISK}" | cut -d' ' -f1 `
do
  \echo "remove container $i"
  docker rm "$i" 2>/dev/null
  \sleep 1
done

for i in ` (docker images -a 2>&1) | grep -v 'REPOSITORY' | egrep "${TAG_PREFIX_SERVER}|${TAG_PREFIX_ASTERISK}" | awk '{ print $3 }' `
do
  \echo "remove image $i"
  docker rmi -f "$i" 2>/dev/null
  \sleep 1
done

cd ..

\rm -fr "$BUILD_DIR" 2>/dev/null

if [[ -d "$BUILD_DIR"  ]]
then
  echo "dir '$BUILD_DIR' could not be deleted"
  exit 1
fi

\mkdir -p "$BUILD_DIR"

if [[ ! -d "$BUILD_DIR" ]]
then
  \echo "dir '$BUILD_DIR' could not be created"
  exit 1
fi

for i in "keys/anontion.key" "keys/www_anontion_com.ca-bundle" "keys/www_anontion_com.crt" "sql/r" "sql/install.sql"  "conf/extensions.conf" "conf/voicemail.conf" "conf/pjsip.conf"
do
  if [ ! -f "${i}" ]
  then
    \echo "mandatory keys file '${i}' missing"
    \exit 1
  else
    \cp -ip "${i}" build/`basename "${i}"`
  fi
done

echo -n "${SQL_ANONTIONPWD}" > build/password

cd ./build

if [[ "$?" != "0" ]]
then
  \echo "cd to build failed"
  \exit 1
fi

\pwd

LHS1=NNNNN
RHS1="${SQL_ROOT_PWD}"
sed -i.bak1 "s|${LHS1}|${RHS1}|" r

if [[ "$?" != "0" ]]
then
  echo "sed of r failed"
  exit 1
fi

LHS2=NNNNN
RHS2="${SQL_ANONTION_PWD}"
sed -i.bak1 "s|${LHS2}|${RHS2}|" install.sql

if [[ "$?" != "0" ]]
then
  echo "sed of install.sql failed"
  exit 1
fi

cd ./..

docker compose -f ./docker/docker-compose.yml build

if [[ "$?" != "0" ]]
then
  echo "command docker-compose -f ./docker/docker-compose.yml build failed"
  exit 1
fi

docker compose -f ./docker/docker-compose.yml up -d

if [[ "$?" != "0" ]]
then
  echo "command docker-compose -f ./docker/docker-compose.yml up -d failed"
  exit 1
fi

docker ps --all

rm -fr "./build/*"

docker exec -it "${TAG_ID_ASTERISK}" bash

